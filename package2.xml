 <notes>
  * added the LoadScript Extension to load and run scripts directly from the shell
  * added more tags 
  * fixed printing of executiong time
 </notes>
 <contents>
  <dir name="/">
   <dir name="scripts">
    <file baseinstalldir="" name="php-shell.sh" role="script" >
     <tasks:replace from="@php_bin@" to="php_bin" type="pear-config" />
     <tasks:replace from="@php_dir@" to="php_dir" type="pear-config" />
     <tasks:unixeol />
    </file>
    <file baseinstalldir="" name="php-shell.bat" role="script" >
     <tasks:replace from="@php_bin@" to="php_bin" type="pear-config" />
     <tasks:replace from="@php_dir@" to="php_dir" type="pear-config" />
     <tasks:windowseol />
    </file>
    <file baseinstalldir="" name="php-shell-cmd.php" role="php" />
   </dir>
   <file baseinstalldir="" name="PHP/Shell.php" role="php" />
   <file baseinstalldir="" name="PHP/Shell/Commands.php" role="php" />
   <file baseinstalldir="" name="PHP/Shell/Options.php" role="php" />
   <file baseinstalldir="" name="PHP/Shell/Extensions.php" role="php" />
   <file baseinstalldir="" name="PHP/Shell/Extensions/Autoload.php" role="php" />
   <file baseinstalldir="" name="PHP/Shell/Extensions/AutoloadDebug.php" role="php" />
   <file baseinstalldir="" name="PHP/Shell/Extensions/InlineHelp.php" role="php" />
   <file baseinstalldir="" name="PHP/Shell/Extensions/VerbosePrint.php" role="php" />
   <file baseinstalldir="" name="PHP/Shell/Extensions/Colour.php" role="php" />
   <file baseinstalldir="" name="PHP/Shell/Extensions/ExecutionTime.php" role="php" />
   <file baseinstalldir="" name="PHP/Shell/Extensions/Prototypes.php" role="php" />
   <file baseinstalldir="" name="PHP/Shell/Extensions/LoadScript.php" role="php" />
   <file baseinstalldir="" name="examples/php-shell-cmd.php" role="doc" />
   <file baseinstalldir="" name="ShellTests.php" role="test" />
   <file baseinstalldir="" name="README" role="doc" />
  </dir> <!-- / -->
 </contents>
 <dependencies>
  <required>
   <php>
    <min>5.0.0</min>
   </php>
   <pearinstaller>
    <min>1.4.0b1</min>
   </pearinstaller>
   <package>
    <name>PEAR</name>
    <channel>pear.php.net</channel>
    <min>1.4</min>
   </package>
  </required>
 </dependencies>
 <phprelease>
  <installconditions>
   <os>
    <name>windows</name>
   </os>
  </installconditions>
  <filelist>
   <install as="php-shell.bat" name="scripts/php-shell.bat" />
   <install as="php-shell-cmd.php" name="scripts/php-shell-cmd.php" />
   <ignore name="scripts/php-shell.sh" />
  </filelist>
 </phprelease>
 <phprelease>
  <filelist>
